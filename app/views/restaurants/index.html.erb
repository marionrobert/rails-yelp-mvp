<h1>All restaurants</h1>

<br>
<%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary" %>
<br>
<br>

<% @restaurants.each do |restaurant| %>
<p><%= restaurant.name %> --</p> <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-info" %>
  <ul>
    <li>Address: <%= restaurant.address %></li>
    <li>Phone Number:<%= restaurant.phone_number %></li>
    <li>Category:<%= restaurant.category %></li>
  </ul>
<% end %>
<br>
